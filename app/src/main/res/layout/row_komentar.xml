<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/role1"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:id="@+id/foto_pengirim1"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_no_image_male_white"/>
        <LinearLayout
            android:layout_toRightOf="@+id/foto_pengirim1"
            android:id="@+id/isi1"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_komen">
            <TextView
                android:id="@+id/nama_pengirim1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengirim"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/foto_komen1"
                android:layout_width="255dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"/>
            <TextView
                android:id="@+id/komentar1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi komentar"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/isi1"
            android:id="@+id/tanggal1"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/role1"
        android:id="@+id/role2"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:id="@+id/foto_pengirim2"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_no_image_male_white"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_toLeftOf="@+id/foto_pengirim"
            android:id="@+id/isi2"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_komen_green">
            <TextView
                android:id="@+id/nama_pengirim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengirim"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/foto_komen2"
                android:layout_gravity="right"
                android:layout_width="255dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"/>
            <TextView
                android:id="@+id/komentar2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi komentar"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/isi2"
            android:id="@+id/tanggal2"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"/>
    </RelativeLayout>

</RelativeLayout>