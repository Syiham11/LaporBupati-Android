<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/role1"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_komen">
            <ImageView
                android:id="@+id/foto_komen1"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"/>
            <TextView
                android:id="@+id/komentar1"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Isi komentar"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tanggal1"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/role1"
        android:id="@+id/role2"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_komen_green">
            <ImageView
                android:id="@+id/foto_komen2"
                android:layout_gravity="right"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"/>
            <TextView
                android:id="@+id/komentar2"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi komentar"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/tanggal2"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"/>
    </LinearLayout>

</RelativeLayout>